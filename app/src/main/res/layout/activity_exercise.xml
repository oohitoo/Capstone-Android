<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a13110091.github.ExerciseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/news"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:drawableLeft="@android:drawable/ic_dialog_info"
            android:text="운동 관련 뉴스 사이트 " />

        <Button
            android:id="@+id/newsvideo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:text="운동 관련 영상"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/woondong"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/stretching"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/stretching1"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
